{
  "name": "breakpoint",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --names backend,frontend \"npm run -w backend dev\" \"npm run -w frontend dev\"",
