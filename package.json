    "dev:backend": "npm run -w backend dev"
  },
  "devDependencies": {
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "concurrently": "8.2.2"
  },
  "dependencies": {
    "mongodb": "^6.19.0"
  }
}
